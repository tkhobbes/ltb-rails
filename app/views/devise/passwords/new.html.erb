<main-layout class="columns is-centered">
  <main-box class="column box is-5">
    <h2 class="is-family-secondary is-size-4"><%= t('.forgot_your_password') %></h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input' %>
      </div>

      <div class="actions">
        <%= f.submit t('.send_me_reset_password_instructions'), class: 'button is-primary' %>
      </div>
    <% end %>
    <main-inline-box class="is-block mt-3">
      <%= render "devise/shared/links" %>
    </main-linline-box>
  </main-box>
</main-layout>
