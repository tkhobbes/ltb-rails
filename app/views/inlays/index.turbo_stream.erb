
<%= turbo_stream.update 'book_results' do %>
<%= render 'books/inlay_table', books: Book.where.not(id: params[:book_ids]).where(
    params[:book]
      .permit(:publication, :issue)
      .compact_blank
  ), list: 'full' %>
<% end %>

<%= turbo_stream.update 'selected_books' do %>
  <%= render 'books/inlay_table', books: Book.where(id: params[:book_ids]), list: 'selected' %>
<% end %>
