
<%= turbo_stream.update 'book_results' do %>
<%= render 'books/inlay_table', books: Book.where(
    params[:book]
      .permit(:publication, :issue)
      .compact_blank
  ) %>
<% end %>

<%= turbo_stream.update 'selected_books' do %>
  <% book_ids = [357,374,415,365,363,362] %>
  <%= render 'books/inlay_table', books: Book.where(id: book_ids) %>
<% end %>
